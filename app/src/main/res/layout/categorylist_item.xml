<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="3dp"
    android:paddingLeft="3dp"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:background="@drawable/roundcorderborder"
    android:layout_marginTop="9dp"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">
<RelativeLayout
    android:padding="@dimen/activity_horizontal_margin"
android:background="@drawable/roundcorderborder"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/folowbtn"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="Follows"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:background="@drawable/folowsbtnbackground"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/unfolowbtn"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:padding="5dp"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="UnFollows"
        android:textColor="@color/white"
        android:background="@drawable/folowsbtnbackground"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/totalfolows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/folowbtn"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="38dp"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/black"
        android:layout_alignLeft="@+id/folowbtn" />

    <TextView
        android:id="@+id/catname"
        android:layout_width="wrap_content"
        android:foregroundGravity="center"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/folowbtn"
        android:layout_alignTop="@+id/img"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textSize="13dp"
        android:text="TextView"
        android:layout_alignRight="@+id/folowbtn" />
</RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>