<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="3dp"
    android:paddingLeft="3dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:background="@drawable/roundcorderborder"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:background="@drawable/roundcorderborder"
            android:layout_width="match_parent"
            android:layout_height="160dp">
<TextView
    android:id="@+id/uname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginLeft="7dp"
    android:text="dinesh007"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="50dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher_round" />
            <TextView
                android:id="@+id/post_type"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="195dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/feed"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:text="sdejhbcwejhbwejfwejhfbhefbjhwfbjwhebfjwhefbehwjfbebhjefbwejhbfwejhfbhjefbjhefbhwjebfhjwbfjhbfhjwbfehwjbfjhfbjhbvhbvhbvhvbhvbhdsbcdshc  sk"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/total_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/totalkike"/>

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/total_like"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:text="2"
                android:textColor="@color/blue"
                android:textSize="14dp"
                tools:ignore="NotSibling"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="33dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:layout_alignParentLeft="true">

                <ImageButton
                    android:id="@+id/like_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cmnt"
                    android:layout_marginLeft="30dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/like"
                    android:visibility="invisible"
                    tools:ignore="NotSibling" />

                <ImageButton
                    android:id="@+id/like_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cmnt"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/dislike"
                    android:visibility="invisible"
                    tools:ignore="NotSibling" />
                <TextView
                    android:id="@+id/cmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="Comment"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="220dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/chat"/>


            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>